<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">Sistema de Agendamento de Exames Ocupacionais</h2>
      </div>
      <div class="card-body">
        <% if user_signed_in? %>
          <div class="text-center">
            <h4>Bem-vindo, <%= current_user.nome %>!</h4>
            <p class="mt-3">
              <% if current_user.admin? %>
                <%= link_to 'Acessar Dashboard Admin', admin_dashboard_path, class: 'btn btn-primary btn-lg' %>
              <% else %>
                <%= link_to 'Acessar Meus Agendamentos', solicitante_agendamentos_path, class: 'btn btn-primary btn-lg' %>
              <% end %>
            </p>
          </div>
        <% else %>
          <div class="text-center">
            <h4>Por favor, fa√ßa login para continuar</h4>
            <p class="mt-3">
              <%= link_to 'Entrar', new_user_session_path, class: 'btn btn-primary btn-lg' %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>